{
  "name": "tokiwa",
  "version": "0.0.1",
  "description": "Cron / Event / Workflow を統合する軽量オーケストレーター",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./cron": {
      "types": "./dist/cron/index.d.ts",
      "import": "./dist/cron/index.js"
    },
    "./orchestrator": {
      "types": "./dist/orchestrator/index.d.ts",
      "import": "./dist/orchestrator/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./workflow": {
      "types": "./dist/workflow/index.d.ts",
      "import": "./dist/workflow/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:types",
    "build:js": "esbuild src/index.ts src/core/index.ts src/cron/index.ts src/orchestrator/index.ts src/utils/index.ts src/workflow/index.ts --bundle --platform=node --format=esm --outdir=dist --target=es2022 --sourcemap",
    "build:types": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "fix": "biome check --write"
  },
  "keywords": [],
  "author": "soukadao",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "0.27.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
